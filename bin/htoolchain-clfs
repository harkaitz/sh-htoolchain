#h: Usage: $0 ...
#h:
#h: ... show      : Show configuration.
#h: ... all       : Build the missing parts of the whole toolchain.
#h: ... all-force : Build the whole toolchain.
#h:
#h: ... linux-headers                 : Install Linux kernel headers.
#h: ... pkg-config                    : Install pkg-config.
#h: ... binutils                      : Install linker/assembler/...
#h: ... gmp,mpfr,mpc,isl              : Install GCC dependencies.
#h: ... gcc-basic,glibc,libstdc++,gcc : Install C library and GCC.
#h: ... script                        : Install Environment script.
. htoolchain-util
htoolchain_clfs() {
    local cmd="$1"
    shift
    case "${cmd}" in
        show)      htoolchain_clfs_show_variables            ;;
        all)       htoolchain_clfs_all                       ;;
        all-force) FORCE=y htoolchain_clfs_all               ;;
        linux-headers|pkg-config|gcc-basic|\
        binutils|gmp|mpfr|mpc|isl|glibc|libstdc++|gcc|script)
            clfs_"`echo "${cmd}" | tr '-' '_' | tr '+' 'p'`" ;;
        *) hlog fatal "Invalid subcommand: ${cmd}."          ;;
    esac
}
htoolchain_clfs_show_variables() {
    htoolchain_util show
    hterm vars CLFS_TARGET CLFS_TOOLDIR CLFS_SYSROOT CLFS_ENV_SCRIPT CLFS_GLIBC_MINIMAL FORCE
}
htoolchain_clfs_calc_variables() {
    CLFS_TARGET="${CLFS_TARGET:-x86_64-ht-linux-gnu}"
    CLFS_TOOLDIR="${CLFS_TOOLDIR:-${HTOOLCHAIN_TOOLDIR}}"
    CLFS_SYSROOT="${CLFS_SYSROOT:-${HTOOLCHAIN_TOOLDIR}/${CLFS_TARGET}}"
    CLFS_ENV_SCRIPT="${CLFS_ENV_SCRIPT:-/usr/local/bin/${CLFS_TARGET}-env}"
    CLFS_GLIBC_MINIMAL="${CLFS_GLIBC_MINIMAL:-2.11}"
    GETSRC_FORCE="${GETSRC_FORCE:-${FORCE:+y}}"
}
## -----------------------------------------------------------------------------
htoolchain_clfs_all() {
    hlog info "Started: `date`"
    hlog info "Log to: ${HTOOLCHAIN_LOG}"
    rm -f "${HTOOLCHAIN_LOG}"
    hlog info "Creating directories ..."
    if true;then
        htoolchain_util gen-prefix
        vrun mkdir -p                   "${CLFS_SYSROOT}"
        vrun mkdir -p         "`dirname "${CLFS_SYSROOT}/${CLFS_SYSROOT}"`"
        vrun rm -f                      "${CLFS_SYSROOT}/${CLFS_SYSROOT}"
        vrun ln -s    "${CLFS_SYSROOT}" "${CLFS_SYSROOT}/${CLFS_SYSROOT}"
    fi >> "${HTOOLCHAIN_LOG}" 2>&1
    if test ! -f "${CLFS_SYSROOT}/include/linux/uuid.h" || test -n "${FORCE}";then
        hlog info "Building Linux headers ..."
        clfs_linux_headers >> "${HTOOLCHAIN_LOG}" 2>&1
    fi
    if test ! -f "${CLFS_TOOLDIR}/bin/${CLFS_TARGET}-pkg-config" || test -n "${FORCE}";then
        hlog info "Building pkg-config ..."
        clfs_pkg_config >> "${HTOOLCHAIN_LOG}" 2>&1
    fi
    if test ! -f "${CLFS_TOOLDIR}/bin/${CLFS_TARGET}-ld" || test -n "${FORCE}";then
        hlog info "Building binutils ..."
        clfs_binutils >> "${HTOOLCHAIN_LOG}" 2>&1
    fi
    if test ! -f "${CLFS_TOOLDIR}/lib/libgmp.a" || test -n "${FORCE}";then
        hlog info "Building GMP ..."
        clfs_gmp >> "${HTOOLCHAIN_LOG}" 2>&1
    fi
    if test ! -f "${CLFS_TOOLDIR}/lib/libmpfr.a" || test -n "${FORCE}";then
        hlog info "Building MPFR ..."
        clfs_mpfr >> "${HTOOLCHAIN_LOG}" 2>&1
    fi
    if test ! -f "${CLFS_TOOLDIR}/lib/libmpc.a" || test -n "${FORCE}";then
        hlog info "Building MPC ..."
        clfs_mpc >> "${HTOOLCHAIN_LOG}" 2>&1
    fi
    if test ! -f "${CLFS_TOOLDIR}/lib/libisl.a" || test -n "${FORCE}";then
        hlog info "Building ISL ..."
        clfs_isl >> "${HTOOLCHAIN_LOG}" 2>&1
    fi
    if test ! -f "${CLFS_TOOLDIR}/bin/${CLFS_TARGET}-gcc" || test -n "${FORCE}";then
        hlog info "Building GCC (basic, first pass) ..."
        clfs_gcc_basic >> "${HTOOLCHAIN_LOG}" 2>&1
    fi
    if test ! -f "${CLFS_SYSROOT}/lib/libc.so" || test -n "${FORCE}";then
        hlog info "Building GLIBC ..."
        clfs_glibc >> "${HTOOLCHAIN_LOG}" 2>&1
    fi
    #if test ! -f "${CLFS_SYSROOT}/lib/libstdc++.a" || test -n "${FORCE}";then
    #    hlog info "Building LIBSTDC++ ..."
    #    clfs_libstdcpp >> "${HTOOLCHAIN_LOG}" 2>&1
    #fi
    if test ! -f "${CLFS_TOOLDIR}/lib/gcc/${CLFS_TARGET}/full" || test -n "${FORCE}";then
        hlog info "Building GCC (final, second pass) ..."
        clfs_gcc >> "${HTOOLCHAIN_LOG}" 2>&1
    fi
    hlog info "Creating ${CLFS_ENV_SCRIPT} ..."
    hlog info "Finished: `date`"
}
clfs_linux_headers() {
    local pwd="`pwd`"
    local src_u1="`htoolchain_util url clfs linux       `"; test -n "${src_u1}"
    local src_u2="`htoolchain_util url clfs linux/patch `"; test -n "${src_u2}"
    local src="`   getsrc_tar    "${src_u1}" `"
    local patch="` getsrc_cached "${src_u2}" `"
    vcd + "${src}"
    if test ! -f .p1;then
        xzcat "${patch}" | patch -Np1 -i - > .p1.log 2>&1
        touch .p1
    fi
    vrun make mrproper
    vrun make ARCH=x86_64 headers_check
    vrun make ARCH=x86_64 INSTALL_HDR_PATH="${CLFS_SYSROOT}" headers_install
    vcd - "${pwd}"
}
clfs_pkg_config() {
    local pwd="`pwd`"
    local url="`htoolchain_util url clfs pkg-config`"; test -n "${url}"
    local src="`getsrc_tar "${url}"`"
    vcd + "${src}"
    vrun ./configure                         \
         --prefix="${CLFS_TOOLDIR}"          \
         --program-prefix="${CLFS_TARGET}-"  \
         --disable-host-tool                 \
         --with-pc-path="${CLFS_SYSROOT}/lib/pkgconfig:${CLFS_SYSROOT}/lib/pkgconfig"
    vrun make
    vrun make install
    vcd - "${pwd}"
}
clfs_binutils() {
    local pwd="`pwd`"
    local url="`htoolchain_util url clfs binutils`"; test -n "${url}"
    local src="`getsrc_tar "${url}"`"
    vcd + "${src}"
    vrun ./configure                       \
         --prefix="${CLFS_TOOLDIR}"        \
         --target="${CLFS_TARGET}"         \
         --with-sysroot="${CLFS_SYSROOT}"  \
         --with-lib-path="${CLFS_SYSROOT}" \
         --disable-nls                     \
         --enable-64-bit-bfd               \
         --enable-gold=yes                 \
         --enable-plugins                  \
         --enable-threads                  \
         --disable-werror                  \
         LDFLAGS="-Wl,-rpath,${CLFS_TOOLDIR}/lib"
    vrun make
    vrun make install
    vcd - "${pwd}"
}
clfs_gmp() {
    local pwd="`pwd`"
    local url="`htoolchain_util url clfs gmp`"; test -n "${url}"
    local src="`getsrc_tar "${url}"`"
    vcd + "${src}"
    vrun ./configure --prefix="${CLFS_TOOLDIR}" LDFLAGS="-Wl,-rpath,${CLFS_TOOLDIR}/lib"
    vrun make
    vrun make install
    vcd - "${pwd}"
}
clfs_mpfr() {
    local pwd="`pwd`"
    local url="`  htoolchain_util url clfs mpfr      `"; test -n "${url}"
    local url_p="`htoolchain_util url clfs mpfr/patch`"; test -n "${url_p}"
    local src="`getsrc_tar    "${url}"    `"
    local p1="` getsrc_cached "${url_p}"  `"
    vcd + "${src}"
    if test ! -f .p1;then
        patch -Np1 -i "${p1}"
        touch .p1
    fi
    vrun ./configure                  \
         --prefix="${CLFS_TOOLDIR}"   \
         --with-gmp="${CLFS_TOOLDIR}" \
         LDFLAGS="-Wl,-rpath,${CLFS_TOOLDIR}/lib"
    vrun make
    vrun make install
    vcd - "${pwd}"
}
clfs_mpc() {
    local pwd="`pwd`"
    local url="`htoolchain_util url clfs mpc`"; test -n "${url}"
    local src="`getsrc_tar "${url}"`"
    vcd + "${src}"
    vrun ./configure                          \
         --prefix="${CLFS_TOOLDIR}"    \
         --with-gmp="${CLFS_TOOLDIR}"  \
         --with-mpfr="${CLFS_TOOLDIR}" \
         LDFLAGS="-Wl,-rpath,${CLFS_TOOLDIR}/lib"
    vrun make
    vrun make install
    vcd - "${pwd}"
}
clfs_isl() {
    local pwd="`pwd`"
    local url="`htoolchain_util url clfs isl`"; test -n "${url}"
    local src="`getsrc_tar "${url}"`"
    vcd + "${src}"
    vrun ./configure                         \
         --prefix="${CLFS_TOOLDIR}"          \
         --with-gmp-prefix="${CLFS_TOOLDIR}" \
         LDFLAGS="-Wl,-rpath,${CLFS_TOOLDIR}/lib"
    vrun make
    vrun make install
    vcd - "${pwd}"
}
clfs_gcc_download() {
    local url="`htoolchain_util url clfs gcc`"; test -n "${url}"
    local src="`getsrc_tar "${url}"`"
    test -n "${src}"
    sed -i '
        /m64=/s/lib64/lib/
    ' "${src}/gcc/config/i386/t-linux64"
    if test ! -f "${src}/.p2";then
        printf '
        #undef STANDARD_STARTFILE_PREFIX_1
        #define STANDARD_STARTFILE_PREFIX_1 "%s/lib/"
        ' "${HBUILD_CLFS_SYSROOT}" >> "${src}/gcc/config/linux.h"
        printf '
        #undef STANDARD_STARTFILE_PREFIX_2
        #define STANDARD_STARTFILE_PREFIX_2 ""
        ' >> "${src}/gcc/config/linux.h"
        touch .p2
    fi
    # if test ! -e "${src}/${HBUILD_CLFS_TARGET}/libgcc/gthr-default.h";then
    #     mkdir -p "${src}/${HBUILD_CLFS_TARGET}/libgcc"
    #     rm -f "${src}/${HBUILD_CLFS_TARGET}/libgcc/gthr-default.h"
    #     ln -s "../../../libgcc/gthr-posix.h" "${src}/${HBUILD_CLFS_TARGET}/libgcc/gthr-default.h"
    # fi
    echo "${src}"
}
clfs_gcc_basic() {
    local pwd="`pwd`"
    local src="`clfs_gcc_download`"; test -n "${src}"
    local bas="`basename "${src}"`"
    local tmp="${src}-build-basic"
    rm -rf "${tmp}"
    mkdir -p "${tmp}"
    vcd + "${tmp}"
    vrun "../${bas}/configure"                 \
         --prefix="${CLFS_TOOLDIR}"            \
         --target="${CLFS_TARGET}"             \
         --with-sysroot="${CLFS_SYSROOT}"      \
         --with-local-prefix="${CLFS_SYSROOT}" \
         --with-native-system-header-dir="${CLFS_SYSROOT}/include" \
         --with-mpfr="${CLFS_TOOLDIR}"         \
         --with-gmp="${CLFS_TOOLDIR}"          \
         --with-isl="${CLFS_TOOLDIR}"          \
         --with-mpc="${CLFS_TOOLDIR}"          \
         --with-glibc-version="${CLFS_GLIBC_MINIMAL}" \
         --enable-default-pie                         \
         --with-newlib             \
         --without-headers         \
         --enable-initfini-array   \
         --disable-nls             \
         --disable-shared          \
         --disable-multilib        \
         --disable-decimal-float   \
         --disable-threads         \
         --disable-libatomic       \
         --disable-libgomp         \
         --disable-libquadmath     \
         --disable-libssp          \
         --disable-libvtv          \
         --disable-libstdcxx       \
         --enable-languages=c,c++  \
         LDFLAGS="-Wl,-rpath,${CLFS_TOOLDIR}/lib"
    vrun make V=1 -j"${NPROC}" all
    vrun make V=1 -j"${NPROC}" install
    vcd - "${pwd}"
}
clfs_glibc() {
    local pwd="`pwd`"
    local url="`htoolchain_util url clfs glibc`"; test -n "${url}"
    local src="`getsrc_tar "${url}"`"; test -n "${src}"
    local bas="`basename "${src}"`"
    local tmp="${src}-build"
    rm -rf "${tmp}"
    mkdir -p "${tmp}"
    vcd + "${tmp}"
    vrun env                                      \
         BUILD_CC="gcc"                           \
         "../${bas}/configure"                    \
         --host="${CLFS_TARGET}"                  \
         --prefix="${CLFS_SYSROOT}"               \
         --enable-kernel=3.12.0                   \
         --with-headers="${CLFS_SYSROOT}/include" \
         --enable-obsolete-rpc                    \
         --disable-werror
    vrun make V=1 -j"${NPROC}"
    vrun make V=1 -j"${NPROC}" install
    vcd - "${pwd}"
}
clfs_libstdcpp() {
    local pwd="`pwd`"
    local src="`clfs_gcc_download`"; test -n "${src}"
    local bas="`basename "${src}"`"
    local tmp="${src}-build-libstdcpp"
    rm -rf "${tmp}"
    mkdir -p "${tmp}"
    vcd + "${tmp}"
    vrun "../${bas}/libstdc++-v3/configure"  \
         --host="${CLFS_TARGET}"             \
         --build="`../${bas}/config.guess`"  \
         --prefix="${CLFS_SYSROOT}"          \
         --disable-multilib                  \
         --disable-nls                       \
         --disable-libstdcxx-pch
    vrun make V=1 -j"${NPROC}" all
    vrun make V=1 -j"${NPROC}" install
    vcd - "${pwd}"
}
clfs_gcc() {
    local pwd="`pwd`"
    local src="`clfs_gcc_download`"; test -n "${src}"
    local bas="`basename "${src}"`"
    local tmp="${src}-build-full"
    rm -rf "${tmp}"
    mkdir -p "${tmp}"
    vcd + "${tmp}"
    vrun "../${bas}/configure"                        \
         --prefix="${CLFS_TOOLDIR}"                   \
         --target="${CLFS_TARGET}"                    \
         --with-sysroot="${CLFS_SYSROOT}"             \
         --with-local-prefix="${CLFS_SYSROOT}"        \
         --with-native-system-header-dir="${CLFS_SYSROOT}/include" \
         --with-mpfr="${CLFS_TOOLDIR}"                \
         --with-gmp="${CLFS_TOOLDIR}"                 \
         --with-isl="${CLFS_TOOLDIR}"                 \
         --with-mpc="${CLFS_TOOLDIR}"                 \
         --with-glibc-version="${CLFS_GLIBC_MINIMAL}" \
         --enable-initfini-array                      \
         --enable-default-pie                         \
         --disable-nls                                \
         --disable-multilib                           \
         --enable-threads=posix                       \
         --disable-decimal-float                      \
         --disable-libatomic                          \
         --disable-libgomp                            \
         --disable-libquadmath                        \
         --disable-libssp                             \
         --disable-libvtv                             \
         --disable-libstdcxx                          \
         --enable-languages=c,c++                     \
         LDFLAGS="-Wl,-rpath,${CLFS_TOOLDIR}/lib"
    vrun make V=1 -j"${NPROC}" all
    vrun make V=1 -j"${NPROC}" install
    vrun touch "${CLFS_TOOLDIR}/lib/gcc/${CLFS_TARGET}/full"
    vcd - "${pwd}"
}
clfs_script() {
    hlog info "Creating ${CLFS_ENV_SCRIPT} ..."
    sudo tee "${CLFS_ENV_SCRIPT}" <<-EOF >/dev/null
	#!/bin/sh -e
	. hcross-env-c
	hcross_env_c                      \\
	    type=gnu                      \\
	    path="${CLFS_TOOLDIR}/bin"    \\
	    tool_prefix="${CLFS_TARGET}-" \\
	    prefix="${CLFS_SYSROOT}/usr"  \\
	    prefixes="${CLFS_SYSROOT}/usr ${CLFS_SYSROOT}"
	EOF
    sudo chmod +x "${CLFS_ENV_SCRIPT}"
}
## -----------------------------------------------------------------------------
htoolchain_clfs_calc_variables
hmain -f "htoolchain-clfs" htoolchain_clfs "$@"
