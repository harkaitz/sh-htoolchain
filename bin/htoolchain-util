#h: Usage: $0 ...
#h:
#h: Utilities to write toolchain generators.
#h:
#h: ... show         : Show configuration.
#h: ... show-b       : Show build variables.
#h: ... url NAME PKG : Get package's URL.
#h: ... gen-prefix   : Generate prefix.
#h: 
. vcd
. hlog
. vrun
. hmain
. hterm
. getsrc-tar
. getsrc-cached
htoolchain_util() {
    local cmd="$1"
    shift
    case "${cmd}" in
        show)       htoolchain_util_show_variables           ;;
        url)        htoolchain_util_url "$@"                 ;;
        gen-prefix) htoolchain_util_generate_prefix          ;;
        *)          hlog fatal "Invalid subcommand: ${cmd}." ;;
    esac
}
htoolchain_util_show_variables() {
    hterm vars HTOOLCHAIN_CONFIG_DIR HTOOLCHAIN_TOOLDIR HTOOLCHAIN_OWNER HTOOLCHAIN_LOG NPROC
}
htoolchain_util_calc_variables() {
    HTOOLCHAIN_CONFIG_DIR="${HTOOLCHAIN_CONFIG_DIR:-`dirname "$0" | xargs dirname`/etc/htoolchain}"
    HTOOLCHAIN_TOOLDIR="${HTOOLCHAIN_TOOLDIR:-/opt/htoolchain}"
    HTOOLCHAIN_OWNER="${HTOOLCHAIN_OWNER:-`whoami`:`whoami`}"
    HTOOLCHAIN_LOG="${HTOOLCHAIN_LOG:-/tmp/htoolchain-`whoami`.log}"
    NPROC="${NPROC:-`nproc 2>/dev/null || echo 1`}"
    export PATH="${CLFS_TOOLDIR}/bin:${PATH}"
}
## -----------------------------------------------------------------------------
htoolchain_util_url() {
    local name="$1" pkg="$2"
    hlog errif "Please specify a toolchain name." test ! -n "${name}"
    hlog errif "Please specify a package name."   test ! -n "${pkg}"
    local cfile="${HTOOLCHAIN_CONFIG_DIR}/${name}-url.cfg"
    hlog errif "File '${cfile}' does not exist."  test ! -f "${cfile}"
    local url="`sed -n 's|^'"${pkg}"'  *||p' "${cfile}"`"
    hlog errif "No URL for ${pkg}." test ! -n "${url}"
    printf '%s\n' "${url}"
}
htoolchain_util_generate_prefix() {
    vrun sudo mkdir -p                       "${HTOOLCHAIN_TOOLDIR}"
    vrun sudo chown -R "${HTOOLCHAIN_OWNER}" "${HTOOLCHAIN_TOOLDIR}"
}



## -----------------------------------------------------------------------------
htoolchain_util_calc_variables
hmain -f "htoolchain-util" htoolchain_util "$@"
