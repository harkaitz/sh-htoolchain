##:
#h: Usage: CC=gcc CFLAGS=-std=c99 $0 [-d]
#h:
#h: Get information from a gcc compiler.
#h:
#h: -d : List default defines.
##:
gcc_info() {
    local OPTIND optopt opt_d=''
    while getopts "d" optopt; do
        case $optopt in
            d)  opt_d=y         ;;
            \?) return 1        ;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    if test @"${opt_d}" = @"y"; then
        ${CC:-gcc} ${CFLAGS} -dM -E - < /dev/null
    fi
}
## -----------------------------------------------------------------------------
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"gcc-info";then
    case "${1}" in
        ''|-h|--help)
            sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|${SCRNAME}|g"
            echo ""
            sed -n 's/^ *#l: \{0,2\}//p' "$0"
            ;;
        *)
            gcc_info "$@"
            ;;
    esac
fi
