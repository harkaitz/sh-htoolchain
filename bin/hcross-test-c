#h: Usage: $0 OPTS...
#h:
#h: ... -p : Build a C program.
#h: ... -n : Run the generated code natively.
hcross_test_c() {
    local src="/tmp/test-c-prog-`whoami`.c"
    local prg="/tmp/test-c-prog-`whoami`.bin"
    ## Parse command line arguments.
    local OPTIND optopt= o_program= o_native=
    while getopts "pn" optopt;do # OPTARG
        case $optopt in
            p)  local o_program=y;;
            n)  local o_native=y;;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    ## Build program.
    if test -n "${o_program}";then
        cat > "${src}" <<-EOF
	#include <stdio.h>
	int main(void) {
	    printf("${SCRNAME}: Executing the example program succeeded.\\n");
	    return 0;
	}
	EOF
        if ! ${CC:-gcc} -o "${prg}" "${src}";then
            echo "${SCRNAME}: Building an example program failed." >&2
            return 1
        fi
        echo "${SCRNAME}: Building an example program succeeded." >&2
    fi
    ## Execute program.
    if test -n "${o_program}" && test -n "${o_native}";then
        if ! "${prg}";then
            echo "${SCRNAME}: Executing the example program failed." >&2
            return 1
        fi
    fi
}
## -----------------------------------------------------------------------------
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"hcross-test-c";then
    case "${1}" in
        ''|-h|--help)
            sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|${SCRNAME}|g"
            echo ""
            sed -n 's/^ *#l: \{0,2\}//p' "$0"
            ;;
        *)
            hcross_test_c "$@"
            ;;
    esac
fi
